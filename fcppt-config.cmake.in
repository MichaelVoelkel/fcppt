include(
	FcpptExport
)

fcppt_export_init(
	"fcppt"
)

fcppt_export_generate_targets(
	"fcppt_core;fcppt_filesystem"
	"${fcppt_USE_STATIC_LIBS}"
)

if(
	fcppt_USE_STATIC_LIBS
)
	set(
		fcppt_DEFINITIONS
		"-D FCPPT_STATIC_LINK"
	)
endif()

set(
	FCPPT_CONFIG_ENABLE_NARROW_STRING
	@ENABLE_NARROW_STRING@
)

if(
	NOT FCPPT_CONFIG_ENABLE_NARROW_STRING
	AND WIN32
)
	set(
		fcppt_DEFINITIONS
		"${fcppt_DEFINITIONS} -D UNICODE -D _UNICODE"
	)
endif()

set(
	fcppt_INCLUDE_DIRS
	"@Boost_INCLUDE_DIRS@;@fcppt_INCLUDE_DIR@"
)
