include(
	FcpptExport
)

if(
	FCPPT_FOUND
)
	return()
endif()

set(
	FCPPT_FOUND
	TRUE
)

set(
	FCPPT_BINARY_DIR
	@CMAKE_BINARY_DIR@
)

set(
	FCPPT_INSTALL_LIBRARY_DIR
	@INSTALL_LIBRARY_DIR@
)

set(
	FCPPT_EXPORT_IN_SOURCE_BUILD
	@FCPPT_UTILS_IN_SOURCE_BUILD@
)

fcppt_export_init(
	"fcppt"
	"${FCPPT_BINARY_DIR}"
	"${FCPPT_INSTALL_LIBRARY_DIR}"
)

fcppt_export_generate_targets(
	"fcppt_core;fcppt_filesystem"
	"${fcppt_USE_STATIC_LIBS}"
)

if(
	fcppt_USE_STATIC_LIBS
)
	set(
		fcppt_DEFINITIONS
		"-D FCPPT_STATIC_LINK"
	)
endif()

set(
	fcppt_INCLUDE_DIRS
	"@Boost_INCLUDE_DIRS@;@fcppt_INCLUDE_DIR@"
)
