get_filename_component(
	_currentDir
	"${CMAKE_CURRENT_LIST_FILE}"
	PATH
)

include(
	"${_currentDir}/FcpptTargets.cmake"
)

if(
	Fcppt_USE_STATIC_LIBS
)
	set(
		Fcppt_core_LIBRARY
		fcppt_core_static
	)

	set(
		Fcppt_filesystem_LIBRARY
		fcppt_filesystem_static
	)

	set(
		Fcppt_thread_LIBRARY
		fcppt_thread_static
	)

	set(
		FCPPT_CONFIG_DEFINITIONS
		"-D FCPPT_STATIC_LINK"
	)
else()
	set(
		Fcppt_core_LIBRARY
		fcppt_core
	)

	set(
		Fcppt_filesystem_LIBRARY
		fcppt_filesystem
	)

	set(
		Fcppt_thread_LIBRARY
		fcppt_thread
	)
endif()

set(
	Fcppt_DEFINITIONS
	"${FCPPT_CONFIG_DEFINITIONS}"
)

set(
	Fcppt_core_LIBRARIES
	"${Fcppt_core_LIBRARY}"
)

set(
	Fcppt_filesystem_LIBRARIES
	"@Boost_FILESYSTEM_LIBRARY@;@Boost_SYSTEM_LIBRARY@;${Fcppt_core_LIBRARY};${Fcppt_filesystem_LIBRARY}"
)

set(
	Fcppt_thread_LIBRARIES
	"@FcpptThreads_LIBRARIES@;@Boost_THREAD_LIBRARY@;${Fcppt_thread_LIBRARY}"
)

set(
	Fcppt_INCLUDE_DIRS
	"@Boost_INCLUDE_DIRS@;@Fcppt_INCLUDE_DIR@"
)
